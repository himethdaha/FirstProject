@page
@model RazorPage.Pages.JournalList.JournalIndexModel

<style>
    .clickable:hover{
        background-color:dimgrey;
        cursor: pointer;
    }
</style>
<br />
<div class="container-fluid row p-0 m-0">
    <div class="col-md-9">
        <h2 class="text-dark">Journal List</h2>
    </div>
    <div class="col-md-3">
        <a asp-page="Create" class="btn btn-secondary btn-outline-dark" role="button">Add New Journal</a>
    </div>

    <div class="col-md-12 p-3 m-3">
        <form class="form-group" method="post">
            <!--Show only if journals exist-->
            @if (Model.journals.Count() > 0)
            {
                <table class="table table-dark table-striped table-responsive-md">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">
                                <label asp-for="journals.FirstOrDefault().EntryID"></label>
                            </th>
                            <th>
                                <label asp-for="journals.FirstOrDefault().EntryName"></label>
                            </th>
                            <th>
                                <label asp-for="journals.FirstOrDefault().EntryDescription"></label>
                            </th>
                            <th>
                                <label asp-for="journals.FirstOrDefault().EntryDate"></label>
                            </th>
                            <th>
                                <label asp-for="journals.FirstOrDefault().StarredEntry"></label>
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.journals)
                    {
                        <tbody class="clickable">
                            <tr onclick="location.href = '@Url.Page("Edit",new {id = item.EntryID})'"  class="hovering" >
                                <td>
                                    @Html.DisplayFor(m => item.EntryID)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.EntryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.EntryDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.EntryDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.StarredEntry)
                                </td>
                            </tr>
                        </tbody>
                    }

                </table>
            }
            else
            {
                <p class="text-info">No Journals to Display!</p>
            }
        </form>
    </div>
</div>
